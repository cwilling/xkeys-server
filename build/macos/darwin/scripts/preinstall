#!/bin/bash

PATH="/usr/local/bin:$PATH"

pkgutil --pkgs=org.nodejs.node.pkg 
if [ "$?" = 1 ]; then
  echo "Required package org.nodejs.node.pkg is not installed"
  exit 1
fi

pkgutil --pkgs=org.nodejs.npm.pkg 
if [ "$?" = 1 ]; then
  echo "Required package org.nodejs.npm.pkg is not installed"
  exit 1
fi
